@model BookBrain.Models.Book

@{
    ViewData["Title"] = "📖 Детайли за книгата";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4 text-center">📖 Детайли за книгата</h2>

    <div class="card shadow-sm border-0 rounded-4 p-4" style="max-width: 750px; margin: 0 auto; background-color: #fafafa;">
        <table class="table table-borderless mb-4 align-middle">
            <tbody>
                <tr>
                    <th class="text-end text-secondary fw-bold" style="width: 180px;">ID:</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Заглавие:</th>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Автор:</th>
                    <td>@Model.Author</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Жанр:</th>
                    <td>@Model.Genre</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold align-top pt-3">Описание:</th>
                    <td class="align-top">
                        <textarea class="form-control bg-white shadow-sm text-start"
                                  rows="6"
                                  readonly
                                  style="resize: none; line-height: 1.5; font-size: 1rem; text-align: left; vertical-align: top; white-space: pre-wrap;">@Model.Description</textarea>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 rounded-pill me-2 shadow-sm">
                ✏️ Редактирай
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                ⬅️ Назад към списъка
            </a>
        </div><br>
    </div>
</div>

<style>
    body {
        background-color: #f5f6f7;
    }

    th {
        width: 150px;
        vertical-align: middle;
        font-size: 1rem;
    }

    td {
        font-size: 1rem;
        vertical-align: top !important;
    }

    textarea {
        font-family: 'Segoe UI', sans-serif;
        text-align: left;
    }

</style>
