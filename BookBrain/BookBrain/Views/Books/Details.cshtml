@model BookBrain.Models.Book

@{
    ViewData["Title"] = "📖 Детайли за книгата";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4 text-center">📖 Детайли за книгата</h2>

    <div class="card shadow-sm border-0 rounded-4 p-4 details-card">
        <table class="table table-borderless mb-4 align-middle">
            <tbody>
                <tr>
                    <th class="text-end text-secondary fw-bold">ID:</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Заглавие:</th>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Автор:</th>
                    <td>@Model.Author</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold">Жанр:</th>
                    <td>@Model.Genre</td>
                </tr>
                <tr>
                    <th class="text-end text-secondary fw-bold align-top pt-3">Описание:</th>
                    <td class="align-top">
                        <div class="description-box">@Model.Description</div>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center gap-2 flex-wrap mt-4">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 rounded-pill shadow-sm">
                ✏️ Редактирай
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                ⬅️ Назад
            </a>

            <form asp-controller="AI" asp-action="Summarize" method="post" id="aiSummarizeForm">
                <input type="hidden" name="description" value="@Model.Description" />
                <a href="#"
                   class="btn btn-primary px-4 rounded-pill shadow-sm"
                   onclick="document.getElementById('aiSummarizeForm').submit(); return false;">
                    ֎ AI Резюме
                </a>
            </form>

        </div>
        <br>
    </div>
</div>

<style>
    body {
        background-color: #f5f6f7;
    }

    .details-card {
        max-width: 750px;
        margin: 0 auto;
        background-color: #fafafa;
    }

    th {
        width: 150px;
        vertical-align: middle;
        font-size: 1rem;
    }

    td {
        font-size: 1rem;
        vertical-align: top !important;
    }

    .description-box {
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
        border: 1px solid #e9ecef; 
        border-radius: .375rem; 
        padding: 0.75rem 1rem; 
        line-height: 1.6; 
        white-space: pre-wrap; 
        max-height: 250px; 
        overflow-y: auto; 
        text-align: left;
    }

</style>