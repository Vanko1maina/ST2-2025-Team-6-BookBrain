@{
    ViewData["Title"] = "AI Резюме";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4 text-center">֎ AI Резюме</h2>

    <div class="card shadow-sm border-0 rounded-4 p-4 summary-card">

        <div class="summary-content">
            @ViewBag.Summary
        </div>

        <hr class="my-4" />

        <div class="text-center">
            <a asp-controller="Books" asp-action="Index"
               class="btn btn-outline-secondary mt-2 px-4 rounded-pill shadow-sm">
                ⬅️ Назад към списъка
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f6f7;
    }

    .summary-card {
        max-width: 750px;
        margin: 0 auto;
        background-color: #fafafa;
    }

    .summary-content {
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: .375rem;
        padding: 1.25rem 1.5rem; /* Малко повече отстояние */
        line-height: 1.7; /* По-добро междуредие */
        font-size: 1.05rem; /* Малко по-голям текст */
        white-space: pre-wrap; /* ЗАДЪЛЖИТЕЛНО - за да запази новите редове от AI */
        text-align: left;
    }
</style>