@model IEnumerable<BookBrain.Models.User>

<h2 class="mb-4">📋 Списък с потребители</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Добави потребител</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary mb-3">🏠︎ Начало</a>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-4 rounded-4 shadow-sm">
        <strong>Няма добавени потребители.</strong>
        Натисни бутона <b>„Добави потребител“</b>, за да добавиш!
    </div>
}
else{
<table class="table table-striped table-bordered text-center align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Име</th>
            <th>Фамилия</th>
            <th>Имейл</th>
            <th>Регистрация</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Email</td>
                <td>@u.RegisteredAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">✏️</a>
                    <form asp-action="Delete" asp-route-id="@u.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" style="background: none; border: none;"
                                onclick="return confirm('Изтриване на потребителя?');">
                            🗑️
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
}