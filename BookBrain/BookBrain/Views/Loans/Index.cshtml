@model IEnumerable<BookBrain.Models.Loan>

<h2 class="mb-4">📚 Активни заемки</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Нова заемка</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary mb-3">🏠︎ Начало</a>


<table class="table table-bordered table-striped text-center align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Книга</th>
            <th>Потребител</th>
            <th>Дата на заемане</th>
            <th>Дата на връщане</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td>@loan.Id</td>
                <td>@loan.Book?.Title</td>
                <td>@loan.User?.FirstName @loan.User?.LastName</td>
                <td>@loan.LoanDate.ToShortDateString()</td>
                <td>@(loan.ReturnDate?.ToShortDateString() ?? "—")</td>
                <td class="d-flex justify-content-center gap-2">
                    @if (loan.ReturnDate == null)
                    {
                        <form asp-action="ReturnBook" asp-route-id="@loan.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-success"
                                    onclick="return confirm('Да отбележа ли книгата като върната?');">
                                📦 Върни
                            </button>
                        </form>
                    }

                    <form asp-action="Delete" asp-route-id="@loan.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Сигурни ли сте, че искате да изтриете тази заемка?');">
                            🗑️ Изтрий
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
