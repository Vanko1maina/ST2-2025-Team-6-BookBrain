@model BookBrain.Models.Loan

<h2 class="mb-4">➕ Нова заемка</h2>

<form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
        <label asp-for="BookId" class="form-label fw-bold"></label>
        <select asp-for="BookId" asp-items="ViewBag.Books" class="form-select"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label fw-bold"></label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoanDate" class="form-label fw-bold"></label>
        <input asp-for="LoanDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">💾 Запиши заемката</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Назад</a>
</form>
